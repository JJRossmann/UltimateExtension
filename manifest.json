{
    "name": "One extension to rule them all",
    "description": "We got this!",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "identity.email",
        "identity",
        "history",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "downloads"
    ]
}